{% extends "base.html.twig" %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('assets/css/articles.css') }}">
{% endblock css %}

{% block title %}
    Page des articles recherchés
{% endblock title %}

{% block main %}
    <section class="title">
        <h1>Résultats de la recherche</h1>
    </section>

    <section class="list-articles">
        {% for article in articles %}
            {% if article.isPublished %}
                <article class="article-buddha">
                    <div class="article-title">
                        <h2>{{ article.title }}</h2>
                    </div>
                    <div class="article-content">
                        <p>{{ article.content }}</p>
                    </div>
                    <div class="article-img">
                        {# <img class="buddha" src="{{ article.image }}" alt="{{ article.title }}" />#}
                    </div>
                    <div class="article-link">
                        <a class="buddha-link" href="{{ path("article", {"id":article.id}) }}">Voir l'article</a>
                    </div>
                </article>
            {% endif %}
        {% endfor %}
    </section>

{% endblock main %}